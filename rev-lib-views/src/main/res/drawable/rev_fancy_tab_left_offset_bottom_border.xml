<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="#FFF"
    android:paddingBottom="0dp"
    android:paddingLeft="15dp"
    android:paddingRight="10dp"
    android:paddingTop="0dp">

    <item>
        <shape>
            <solid android:color="#7da453" />
            <size android:width="1dp" />
        </shape>
    </item>

    <!-- main color -->
    <item
        android:bottom="1dp"
        android:left="0dp"
        android:right="1dp">
        <shape>
            <solid android:color="#FFF" />
        </shape>
    </item>

    <!-- draw another block to cut-off the left and right bars -->
    <item android:bottom="12.0dp">
        <shape>
            <solid android:color="#FFF" />
        </shape>
    </item>

    <!-- Pull  ToLeft -->
    <item
        android:bottom="1dp"
        android:left="10dp"
        android:right="10dp">
        <shape>
            <solid android:color="#9575CD" />
        </shape>
    </item>

    <!-- Pull  ToLeft -->
    <item
        android:left="12dp"
        android:right="2dp"
        android:bottom="1dp">
        <shape>
            <solid android:color="@color/greyExtraLight" />
        </shape>
    </item>

</layer-list>