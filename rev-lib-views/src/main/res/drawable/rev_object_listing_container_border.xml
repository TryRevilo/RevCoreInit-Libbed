<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/greyExtraLight"
    android:paddingBottom="3dp"
    android:paddingLeft="22dp"
    android:paddingRight="10dp"
    android:paddingTop="3dp">

    <item>
        <shape>
            <solid android:color="#7da453" />
            <size android:width="1dp" />
        </shape>
    </item>

    <!-- main color -->
    <item
        android:bottom="1dp"
        android:left="0dp"
        android:right="1dp">
        <shape>
            <solid android:color="@color/greyExtraLight" />
        </shape>
    </item>

    <!-- Pull  ToLeft -->
    <item
        android:bottom="1dp"
        android:left="10dp">
        <shape>
            <solid android:color="#9575CD" />
        </shape>
    </item>

    <!-- Pull  ToLeft -->
    <item
        android:left="12dp"
        android:top="0.5dp"
        android:right="0.5dp"
        android:bottom="0.5dp">
        <shape>
            <solid android:color="@color/greyExtraLight" />
        </shape>
    </item>

</layer-list>